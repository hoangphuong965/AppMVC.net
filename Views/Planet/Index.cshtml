@inject App.Services.PlanetService planetService
<h1>Các hành tinh trong hệ mặt trời</h1>

<div class="list-group">
    @foreach (var planet in planetService)
    {
        <a class="list-group-item list-group-item-action" asp-controller="Planet" asp-action="PlanetInfo" asp-action="@planet.Name" asp-route-id="@planet.Id">
            @planet.VnName - @planet.Name
        </a>
    }
</div>
